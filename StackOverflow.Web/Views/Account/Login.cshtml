<div class="container">
    <main role="main" class="pb-3" style="margin-top: 100px;">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header" style="font-size:20px">Log in to your account</div>
                    <div class="card-body">
                        @if (ViewBag.Message != null)
                        {
                            <span class="text-danger">@ViewBag.Message</span>
                        }
                        <form method="post" action="/account/login">
                            @*<input type="hidden" name="returnurl" value="/Questions/AskAQuestion" />*@
                            <input type="text" name="email" placeholder="Email" class="form-control" />
                            <br />
                            <input type="password" name="password" placeholder="Password" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Login</button>
                        </form>
                        <br />
                        <a href="/account/signup">Sign up for a new account</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
